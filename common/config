# tc-ext-tools message colors
MESSAGE_COLOR="${BLUE}"
MESSAGE_COLOR_H="${CYAN}"
WARNING_COLOR="${GREEN}"
WARNING_COLOR_H="${YELLOW}"
ERROR_COLOR="${RED}"
ERROR_COLOR_H="${YELLOW}"

# tc-ext-tools dependencies
TET_DEPENDS="compiletc squashfs-tools-4.x tar wget xz intltool perl_xml_parser gettext libtool libtool-dev autoconf automake zsync"

# default encryption key
PACKAGE_ENCRYPTION_KEY="tinycore"

# compiler and linker flags
TET_CFLAGS="-march=i486 -mtune=i686 -Os -pipe"
TET_CXXFLAGS="-march=i486 -mtune=i686 -Os -pipe"
TET_LDFLAGS="-Wl,-O1"

# default install prefix
TET_PREFIX="usr/local"

# packages database directory
TET_PACKAGES_DATABASE="${HOME}/.local/share/tet/packages_db"

